# .env.example
# Copy this file to .env and adjust the settings as needed.

# AWS Account Number
AWS_ACCOUNT=123456789012

# AWS Regions (optional, comma-separated; leave blank to scan all regions)
AWS_REGION=us-east-1,us-west-2

# AWS CLI Profile (default: default)
AWS_PROFILE=default

# Prowler Compliance Framework (default: cis_1.5_aws)
COMPLIANCE=cis_1.5_aws

# Output Directory
OUTPUT_DIR=./output

# AWS Role to assume (optional)
AWS_ROLE=arn:aws:iam::123456789012:role/YourRoleName

# AWS Role Session Name (optional)
AWS_ROLE_SESSION_NAME=scanAccountSession
